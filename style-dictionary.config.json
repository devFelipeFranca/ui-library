{
	"source": ["tokens/**/*.json"],
	"platforms": {
		"web": {
			"transformGroup": "web",
			"buildPath": "src/styles/",
			"files": [
				{
					"destination": "tokens.css",
					"format": "css/variables",
					"options": { "selector": ":root" }
				},
				{
					"destination": "tokens.json",
					"format": "json/nested"
				}
			]
		}
	}
}


